{
    "name": "kaadon/think-addons",
    "type": "library",
    "description": "kaadon think-addons for ThinkPhp8.0",
    "keywords": [
        "kaadon think-addons",
        "think_addons",
        "kaadon"
    ],
    "require": {
        "php": ">=8.1.0",
        "topthink/framework": "^8",
        "topthink/think-view": "^2",
        "topthink/think-helper": "^3"
    },
    "autoload": {
        "psr-4": {
            "think\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "think\\addons\\Service"
            ],
            "config":{
                "addons": "src/config.php"
            }
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "php think addons:config"
        ]
    }
}
